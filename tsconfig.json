{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "strict": true,
        "moduleResolution": "NodeNext",
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "declaration": true,
        "jsx": "react"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
